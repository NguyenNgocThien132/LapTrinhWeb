@model List<_2001207118_NguyenNgocThien.Models.SanPham>
@{
    ViewBag.Title = "QuanLy";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<a href="/admin/insert" class="btn btn-primary mb-3">Thêm sản phẩm mới</a>
<form class="d-flex align-items-center" action="/admin/quanly" method="post">
    <label for="search" class="mx-2 my-1">Search</label>
    <input type="search" class="form-control w-auto" id="search" name="search" value="@ViewBag.Search" placeholder="Search" />
    <button type="submit" class="btn btn-primary mx-2">GO</button>
</form>
@{
    string iconclass = "";
    if (ViewBag.IconClass == "fa-sort-asc")
    {
        iconclass = "fa-sort-desc";
    }
    else
    {
        iconclass = "fa-sort-asc";
    }
}
<table class="table">
    <tr>
        <th>
            <a href="/admin/quanly?SortColumn=ID&IconClass=@iconclass&Page=1">ID</a>
            @if (ViewBag.SortColumn == "ID")
            {
                <i class="fa @ViewBag.IconClass"></i>
            }
        </th>
        <th>ID Thương Hiệu</th>
        <th style="width: 300px">

            <a href="/admin/quanly?SortColumn=TenSP&IconClass=@iconclass&Page=1">Tên sản phẩm</a>
            @if (ViewBag.SortColumn == "TenSP")
            {
                <i class="fa @ViewBag.IconClass"></i>
            }
        </th>
        <th>Số Lượng</th>
        <th>

            <a href="/admin/quanly?SortColumn=GiaTien&IconClass=@iconclass&Page=1">Giá Tiền</a>
            @if (ViewBag.SortColumn == "GiaTien")
            {
                <i class="fa @ViewBag.IconClass"></i>
            }
        </th>
        <th>Giá Khuyến Mãi</th>
        <th>Chi tiết sản phẩm</th>
        <th>Tùy chỉnh</th>
        <th>Xóa SP</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.ThuongHieu.NSX</td>
            <td>@item.TenSP</td>
            <td>@item.SoLuong</td>
            <td>@item.GiaTien.Value.ToString("C")</td>
            @if (@item.GiaGiam != null)
            {
                <td>@item.GiaGiam.Value.ToString("C")</td>
            }
            else
            {
                <td>@item.GiaGiam</td>
            }
            <td>
                <a href="/admin/chitietsp/@item.ID">Chi tiết</a>
            </td>
            <td>
                <a href="/admin/edit/@item.ID">Edit</a> <br />
                <a href="/admin/editsanpham/@item.ID">Edit Thông tin</a>
            </td>
            <td>
                <a href="/admin/deletesanpham/@item.ID">Delete</a>
            </td>
        </tr>
    }
    <tr>
        <td colspan="9">
            @{
                int PrevPage = ViewBag.Page - 1;
                if (PrevPage <= 0)
                {
                    PrevPage = 1;
                }
                int NextPage = ViewBag.Page + 1;
                if (NextPage > ViewBag.NoOfPages)
                {
                    NextPage = ViewBag.NoOfPages;
                }
            }
            <ul class="pagination justify-content-center">
                @if (ViewBag.Page == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@PrevPage">
                            Prev
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@PrevPage">
                            Prev
                        </a>
                    </li>
                }
                @for (int i = 0; i < ViewBag.NoOfPages; i++)
                {
                    if (i + 1 == ViewBag.Page)
                    {
                        <li class="page-item active">
                            <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@(i+1)">
                                @(i+1)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@(i+1)">
                                @(i+1)
                            </a>
                        </li>
                    }
                }
                @if (ViewBag.Page == ViewBag.NoOfPages)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@NextPage">
                            Next
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item active">
                        <a class="page-link" href="/admin/quanly?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&Page=@NextPage">
                            Next
                        </a>
                    </li>
                }
            </ul>
        </td>
    </tr>
</table>

