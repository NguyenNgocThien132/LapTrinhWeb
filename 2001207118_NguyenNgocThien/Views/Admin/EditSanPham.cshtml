@model _2001207118_NguyenNgocThien.Models.ChiTietSanPham
@{
    ViewBag.Title = "EditSanPham";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<form action="/admin/editsanpham" method="post">

    <input class="form-control" type="hidden" name="ID" id="ID" value="@Model.ID" />
    <input class="form-control" type="hidden" name="HinhAnh" id="HinhAnh" value="@Model.IDSanPham" />
    <div class="row">
        <div class="col-md-6">
            <label for="CPU">CPU</label>
            <input class="form-control" type="text" name="CPU" id="CPU" value="@Model.CPU" />
        </div>
        <div class="col-md-6">
            <label for="ManHinh">Màn Hình</label>
            <input class="form-control" type="text" name="ManHinh" id="ManHinh" value="@Model.ManHinh" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="RAM">RAM</label>
            <input class="form-control" type="text" name="RAM" id="RAM" value="@Model.RAM" />
        </div>
        <div class="col-md-6">
            <label for="DoHoa">Card đồ họa</label>
            <input class="form-control" type="text" name="DoHoa" id="DoHoa" value="@Model.DoHoa" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="LuuTru">Lưu Trữ</label>
            <input class="form-control" type="text" name="LuuTru" id="LuuTru" value="@Model.LuuTru" />
        </div>
        <div class="col-md-6">
            <label for="HeDieuHanh">Hệ Điều Hành</label>
            <input class="form-control" type="text" name="HeDieuHanh" id="HeDieuHanh" value="@Model.HeDieuHanh" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Pin">Pin</label>
            <input class="form-control" type="text" name="Pin" id="Pin" value="@Model.Pin" />
        </div>
        <div class="col-md-6">
            <label for="KhoiLuong">Khối Lượng</label>
            <input class="form-control" type="text" name="KhoiLuong" id="KhoiLuong" value="@Model.KhoiLuong" />
        </div>
    </div>
    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

