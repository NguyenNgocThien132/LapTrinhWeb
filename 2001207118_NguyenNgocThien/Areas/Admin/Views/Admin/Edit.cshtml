@model _2001207118_NguyenNgocThien.Models.SanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<form action="/admin/admin/edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="ID" id="ID" value="@Model.ID" />
    <div class="row">
        <div class="col-md-6">
            <label for="IDThuongHieu">ID Thương hiệu</label>
            <input class="form-control" type="number" name="ID" id="ID" value="@Model.ThuongHieuID" />
        </div>
        <div class="col-md-6">
            <label for="TenSP">Tên Sản Phẩm</label>
            <input class="form-control" type="text" name="TenSP" id="TenSP" value="@Model.TenSP" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="SoLuong">so luong</label>
            <input class="form-control" type="number" name="SoLuong" id="SoLuong" value="@Model.SoLuong" />
        </div>
        <div class="col-md-6">
            <label for="GiaTien">GiaTien</label>
            <input class="form-control" type="number" name="GiaTien" id="GiaTien" value="@Model.GiaTien" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="GiaGiam">GiaGiam</label>
            <input class="form-control" type="number" name="GiaGiam" id="GiaGiam" value="@Model.GiaGiam" />
        </div>
        <div class="col-md-6">
            <label for="NhaSanXuat">NhaSanXuat</label>
            @*<input class="form-control" type="text" name="NhaSanXuat" id="NhaSanXuat" value="@Model.NhaSanXuat" disabled/>*@
            <select class="form-control" name="NhaSanXuat" id="NhaSanXuat">
                <option value="@Model.NhaSanXuat">@Model.NhaSanXuat</option>
                @foreach (var item in ViewBag.th)
                {
                    <option value="@item.NSX">@item.NSX</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label for="HinhAnh">Hinh</label>
            <input class="form-control" type="file" name="HinhAnh" id="HinhAnh" value="@Model.HinhAnh" />
        </div>
    </div>

    <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/admin/quanly" class="btn btn-danger">Quay lại</a>
    </div>

</form>

